;uC R1

org 	0000h
jmp 	config


config:
MOV  	P1,#0FFH
MOV	P2,#0FFH
MOV	SCON,#01010000B		; ATIVA A SERIAL NO MODO 00(SICRONO DE 8 BITS COM BAUD RATE 1/12 DO OCILADOR)
MOV 	TMOD,#00100000B
MOV	TH1,#-3
SETB	TR1 

AUX1:
JNB	RI,AUX1
CLR 	RI
MOV	A,SBUF
MOV	P2,A
MOV	A,P1
MOV	SBUF,A
AUX2:
JB	TI,AUX2
CLR	TI
JMP 	AUX1



END
